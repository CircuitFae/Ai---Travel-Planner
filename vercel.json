{
  "builds": [
    {
      "src": "backend.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "100mb" }
    },
    {
      "src": "frontend.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "100mb" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend.py"
    }
  ]
}
